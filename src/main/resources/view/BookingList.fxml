<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" style="-fx-padding: 20; -fx-background-color: #ecf0f1;" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.BookingListController">

    <Label text="QUẢN LÝ ĐƠN HÀNG (SALES)" textFill="#e67e22">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <Button mnemonicParsing="false" onAction="#handleAdd" 
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" 
                    text="+ Tạo Đơn Hàng" />
            
            <Button mnemonicParsing="false" onAction="#handleEdit" 
                    style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" 
                    text="Sửa Số Lượng" />
            
            <Button mnemonicParsing="false" onAction="#handleCancelRequest" 
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" 
                    text="Yêu cầu Hủy / Phạt" />
            
            <HBox HBox.hgrow="ALWAYS" />
            
            <TextField promptText="Tìm theo mã hoặc tên..." style="-fx-background-radius: 5;" />
            
            <Button mnemonicParsing="false" 
                    style="-fx-background-color: #343a40; -fx-text-fill: white; -fx-cursor: hand;" 
                    text="Tìm kiếm" />
        </children>
    </HBox>

    <TableView fx:id="tableBooking" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colID" prefWidth="100.0" text="Mã Đơn" />
            <TableColumn fx:id="colCusID" prefWidth="120.0" text="Mã Khách" />
            <TableColumn fx:id="colTourID" prefWidth="120.0" text="Mã Tour" />
            <TableColumn fx:id="colPeople" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Số Khách" />
            <TableColumn fx:id="colTotal" prefWidth="150.0" style="-fx-alignment: CENTER-RIGHT;" text="Tổng Tiền (VNĐ)" />
            <TableColumn fx:id="colStatus" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Trạng Thái" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    
</VBox>