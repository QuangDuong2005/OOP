<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" style="-fx-background-color: white; -fx-padding: 25;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FinancialReportController">
    <children>
        <Label text="THỐNG KÊ DOANH THU" textFill="#8e44ad">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
            <children>
                <Label text="Từ ngày:" />
                <DatePicker fx:id="dpFrom" prefWidth="150.0" />
                <Label text="Đến ngày:" />
                <DatePicker fx:id="dpTo" prefWidth="150.0" />
                <Button onAction="#handleGenerateReport" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-cursor: hand;" text="Xem báo cáo" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleExportCsv" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="Xuất CSV" />
            </children>
        </HBox>

        <HBox spacing="20.0">
            <children>
                <VBox prefWidth="200.0" style="-fx-background-color: #2ecc71; -fx-padding: 15; -fx-background-radius: 8;">
                    <children>
                        <Label text="Tổng Doanh Thu" textFill="WHITE" />
                        <Label fx:id="lblRevenue" text="0 VNĐ" textFill="WHITE">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                    </children>
                </VBox>
                <VBox prefWidth="200.0" style="-fx-background-color: #3498db; -fx-padding: 15; -fx-background-radius: 8;">
                    <children>
                        <Label text="Số Hóa Đơn" textFill="WHITE" />
                        <Label fx:id="lblInvoiceCount" text="0" textFill="WHITE">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                    </children>
                </VBox>
                <VBox prefWidth="200.0" style="-fx-background-color: #f39c12; -fx-padding: 15; -fx-background-radius: 8;">
                    <children>
                        <Label text="Số Booking" textFill="WHITE" />
                        <Label fx:id="lblBookingCount" text="0" textFill="WHITE">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>

        <Label text="Lịch sử báo cáo gần đây" textFill="#7f8c8d">
            <font><Font name="System Italic" size="13.0" /></font>
        </Label>
        <TableView fx:id="tblReports" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="150.0" text="Mã Báo Cáo" />
                <TableColumn fx:id="colFrom" prefWidth="120.0" text="Từ Ngày" />
                <TableColumn fx:id="colTo" prefWidth="120.0" text="Đến Ngày" />
                <TableColumn fx:id="colRevenue" prefWidth="150.0" text="Doanh Thu" />
            </columns>
        </TableView>
    </children>
</VBox>