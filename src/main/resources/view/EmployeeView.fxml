<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.EmployeeController">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="QUẢN LÝ DANH SÁCH NHÂN VIÊN" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <HBox spacing="10.0">
        <Button text="+ Thêm Nhân viên" onAction="#handleAdd" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        
        <Button text="Cập nhật thông tin" onAction="#handleEdit" 
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        
        <Button text="Cho nghỉ việc (Khóa)" onAction="#handleDelete" 
                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>

    <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="120.0" text="Mã NV (User)" />
            <TableColumn fx:id="colName" prefWidth="200.0" text="Họ và Tên" />
            <TableColumn fx:id="colRole" prefWidth="120.0" text="Chức vụ" />
            <TableColumn fx:id="colStatus" prefWidth="120.0" text="Trạng thái" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>