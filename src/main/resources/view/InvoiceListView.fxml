<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.InvoiceListController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="DANH SÁCH HÓA ĐƠN" textFill="#8e44ad">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                
                <TextField fx:id="txtSearch" promptText="Tìm mã hóa đơn..." style="-fx-pref-width: 180; -fx-pref-height: 30;" />
                
                <Button onAction="#openCreateInvoicePopup" text="+ Tạo hóa đơn" 
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 13px; -fx-padding: 5 15; -fx-background-radius: 4; -fx-font-weight: bold;" />
                
                <Button onAction="#handleEditRequest" text="Yêu cầu sửa" 
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 13px; -fx-padding: 5 15; -fx-background-radius: 4;" />
            </children>
        </HBox>
        
        <TableView fx:id="tblInvoices" VBox.vgrow="ALWAYS" style="-fx-font-size: 13px;">
            <columns>
                <TableColumn fx:id="colID" prefWidth="90.0" text="Mã HĐ" />
                <TableColumn fx:id="colBookingID" prefWidth="110.0" text="Mã Booking" />
                <TableColumn fx:id="colAmount" prefWidth="110.0" text="Số tiền" />
                <TableColumn fx:id="colDate" prefWidth="130.0" text="Ngày tạo" />
                <TableColumn fx:id="colStaff" prefWidth="120.0" text="Nhân viên" />
                <TableColumn fx:id="colNote" prefWidth="180.0" text="Ghi chú" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>