<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManageInvoiceController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <Label text="QUẢN LÝ HÓA ĐƠN" textFill="#8e44ad">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                
                <Button onAction="#openCreateInvoicePopup" text="+ Tạo Hóa Đơn" 
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold; -fx-padding: 8 15;" />
                
                <Button onAction="#handleEditRequest" text="Yêu cầu sửa" 
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 15;" />
            </children>
        </HBox>

        <Separator />

        <TableView fx:id="tblInvoices" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colID" prefWidth="100.0" text="Mã HĐ" />
                <TableColumn fx:id="colBookingID" prefWidth="100.0" text="Mã Booking" />
                <TableColumn fx:id="colAmount" prefWidth="120.0" text="Số tiền" />
                <TableColumn fx:id="colDate" prefWidth="150.0" text="Ngày tạo" />
                <TableColumn fx:id="colStaff" prefWidth="120.0" text="Người tạo" />
                <TableColumn fx:id="colNote" prefWidth="200.0" text="Ghi chú" />
            </columns>
        </TableView>
    </children>
</VBox>