<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" 
            xmlns="http://javafx.com/javafx/20.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.SaleController">
    
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #d35400;">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            
            <Label text="SALE STAFF" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                 <VBox.margin>
                     <Insets bottom="20.0" />
                </VBox.margin>
            </Label>
            
            <Button maxWidth="Infinity" text="Quản lý Khách hàng" onAction="#showCustomers" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>
            
            <Button maxWidth="Infinity" text="Đặt Tour (Booking)" onAction="#showBooking" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>
            
            <Button maxWidth="Infinity" text="Danh sách Đơn hàng" onAction="#showOrders" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>

            <Button maxWidth="Infinity" text="Đổi mật khẩu" onAction="#showProfile" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>
            
            <VBox VBox.vgrow="ALWAYS" /> 
            
            <Button maxWidth="Infinity" text="Đăng xuất" onAction="#handleLogout" 
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;">
            <Label text="Chào mừng bạn đến với giao diện Sale!" textFill="#7f8c8d">
                <font>
                    <Font size="24.0" />
                 </font>
            </Label>
        </StackPane>
    </center>
    
</BorderPane>