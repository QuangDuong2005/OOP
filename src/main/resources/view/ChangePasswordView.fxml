<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" spacing="15.0" prefWidth="400.0" prefHeight="300.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ChangePasswordController"
      style="-fx-background-color: white; -fx-padding: 20;">

    <Label text="ĐỔI MẬT KHẨU CÁ NHÂN" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <Label text="Mật khẩu cũ:" />
    <PasswordField fx:id="txtOldPass" promptText="Nhập mật khẩu hiện tại..." />

    <Label text="Mật khẩu mới:" />
    <PasswordField fx:id="txtNewPass" promptText="Nhập mật khẩu mới..." />

    <Label text="Xác nhận mật khẩu mới:" />
    <PasswordField fx:id="txtConfirmPass" promptText="Nhập lại mật khẩu mới..." />

    <Label fx:id="lblError" textFill="RED" wrapText="true" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="Hủy bỏ" onAction="#handleCancel" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button text="Lưu thay đổi" onAction="#handleSave" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;"/>
    </HBox>
</VBox>