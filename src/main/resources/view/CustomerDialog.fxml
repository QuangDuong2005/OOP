<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.CustomerDialogController" 
      style="-fx-padding: 20; -fx-background-color: white;" prefWidth="400">

    <Label fx:id="lblTitle" text="THÔNG TIN KHÁCH HÀNG" textFill="#2980b9">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <VBox spacing="5">
        <Label text="Mã Khách Hàng:" />
        <TextField fx:id="txtID" promptText="VD: C001" />
    </VBox>

    <VBox spacing="5">
        <Label text="Họ và Tên:" />
        <TextField fx:id="txtName" promptText="Nhập họ tên đầy đủ" />
    </VBox>

    <VBox spacing="5">
        <Label text="Số Điện Thoại:" />
        <TextField fx:id="txtPhone" promptText="Nhập số điện thoại" />
    </VBox>

    <VBox spacing="5">
        <Label text="Email:" />
        <TextField fx:id="txtEmail" promptText="example@email.com" />
    </VBox>

    <VBox spacing="5">
        <Label text="Ngày sinh:" />
        <DatePicker fx:id="dpDob" promptText="Chọn ngày sinh" prefWidth="400.0" />
    </VBox>

    <Label fx:id="lblError" textFill="RED" wrapText="true" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="Hủy" onAction="#handleCancel" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button text="Lưu" onAction="#handleSave" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>
</VBox>