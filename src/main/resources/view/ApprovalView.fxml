<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.ApprovalController">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="QUẢN LÝ YÊU CẦU PHÊ DUYỆT" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <TableView fx:id="tableRequests" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="80.0" text="ID Request" />
            <TableColumn fx:id="colType" prefWidth="120.0" text="Loại Yêu Cầu" />
            <TableColumn fx:id="colStaff" prefWidth="100.0" text="Người Gửi" />
            <TableColumn fx:id="colReason" prefWidth="200.0" text="Lý do / Nội dung" />
            <TableColumn fx:id="colDetail" prefWidth="150.0" text="Chi tiết thay đổi" />
            <TableColumn fx:id="colStatus" prefWidth="100.0" text="Trạng thái" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Làm mới" onAction="#handleRefresh" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;"/>
        
        <HBox HBox.hgrow="ALWAYS" /> <Button text="Từ Chối" onAction="#handleReject" 
                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        
        <Button text="Duyệt Yêu Cầu" onAction="#handleApprove" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>
</VBox>