<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" 
            xmlns="http://javafx.com/javafx/20.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.ManagerController">
    
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            
            <Label text="MANAGER" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>
            
            <Button maxWidth="Infinity" text="Quản lý Tài khoản" onAction="#showAccounts" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>
            
            <Button maxWidth="Infinity" text="Quản lý Nhân viên" onAction="#showEmployees" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>
            
            <Button maxWidth="Infinity" text="Quản lý Tour" onAction="#showTours" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>
            
            <Button maxWidth="Infinity" text="Duyệt Yêu cầu" onAction="#showNotifications" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>
            
            <Button maxWidth="Infinity" text="Báo cáo Thống kê" onAction="#showStatistics" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand; -fx-font-size: 14;"/>

            <VBox VBox.vgrow="ALWAYS" /> 
            
            <Button maxWidth="Infinity" text="Đăng xuất" onAction="#handleLogout" 
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;">
            <Label text="Chào mừng trở lại, Manager!" textFill="#7f8c8d">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
        </StackPane>
    </center>
    
</BorderPane>