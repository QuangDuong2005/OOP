<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateAccountController">
   <children>
      <HBox layoutX="20.0" layoutY="20.0" prefHeight="410.0" prefWidth="710.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <VBox prefHeight="410.0" prefWidth="420.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="1. Chọn nhân viên chủ sở hữu" textFill="#2a5058">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TableView fx:id="tblStaff" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colID" prefWidth="70.0" text="Mã NV" />
                      <TableColumn fx:id="colName" prefWidth="150.0" text="Họ Tên" />
                        <TableColumn fx:id="colPhone" prefWidth="100.0" text="SĐT" />
                        <TableColumn fx:id="colStaffRole" prefWidth="90.0" text="Chức vụ" />
                    </columns>
                  </TableView>
               </children>
            </VBox>

            <VBox prefHeight="410.0" prefWidth="280.0" spacing="20.0" style="-fx-background-color: #f5f5f5; -fx-padding: 15; -fx-background-radius: 10;">
               <children>
                  <Label text="2. Thông tin tài khoản" textFill="#2a5058">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Nhân viên đang chọn:" textFill="#757575" />
                        <TextField fx:id="txtSelectedStaff" editable="false" promptText="Chưa chọn nhân viên..." style="-fx-background-color: #e0e0e0; -fx-text-fill: #b71c1c; -fx-font-weight: bold;" />
                     </children>
                  </VBox>

                  <VBox spacing="5.0">
                     <children>
                        <Label text="Tên đăng nhập (Username):" />
                        <TextField fx:id="txtUsername" promptText="Nhập username" />
                     </children>
                  </VBox>

                  <VBox spacing="5.0">
                     <children>
                        <Label text="Phân quyền (Role):" />
                        <ComboBox fx:id="cbRole" prefWidth="250.0" promptText="Chọn quyền truy cập" />
                     </children>
                  </VBox>

                  <Label text="* Mật khẩu sẽ được hệ thống tạo ngẫu nhiên" textFill="#757575" style="-fx-font-style: italic;">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>

                  <VBox alignment="BOTTOM_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="btnCreate" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCreateAccount" prefHeight="40.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand;" text="TẠO TÀI KHOẢN">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnCancel" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCancel" prefHeight="35.0" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-cursor: hand;" text="Hủy bỏ">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>