<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookingDialogController">
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="lblTitle" text="TẠO ĐƠN HÀNG MỚI" textFill="#e67e22">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Mã Đơn Hàng:" />
            <TextField fx:id="txtBookingID" promptText="Ví dụ: B001" />
         </children>
      </VBox>
      
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Khách Hàng:" />
            <ComboBox fx:id="cbCustomerID" prefWidth="400.0" promptText="-- Chọn khách hàng --" />
         </children>
      </VBox>
      
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Tour Du Lịch:" />
            <ComboBox fx:id="cbTourID" prefWidth="400.0" promptText="-- Chọn tour --" />
         </children>
      </VBox>
      
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Số Lượng Khách:" />
            <TextField fx:id="txtNumPeople" promptText="Nhập số người tham gia" />
         </children>
      </VBox>
      
      <Label fx:id="lblError" textFill="#dc3545" wrapText="true">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="80.0" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Hủy" />
            <Button mnemonicParsing="false" onAction="#handleSave" prefWidth="80.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Lưu">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>